<div class="rendered-question-basic">
  <small class="small-question-info">Question asked by {{question.question_author}} &bull; {{moment-calendar question.timestamp}}</small><br>
  {{#link-to 'question' question.id}}<span class="rendered-question-text">{{question.question_text}}</span>{{/link-to}}
  <p class="rendered-question-notes">
    {{#if fullNotesShowing}}
      {{question.notes}}
      {{else}}
        {{question.notes_preview}}
        {{#if question.notes_areLong}}
          ...&nbsp;<span class="btn-link" {{action 'showFullNotes'}}>(more)</span>
        {{/if}}
    {{/if}}
  </p>
  {{#link-to 'question' question}}
    <small class="small-question-info">{{question.answers.length}}&nbsp;Answers</small>
  {{/link-to}}
  <hr>
</div>
